<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llFruitFrame"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvItemFruitId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewItemFruitStyle"/>

    <TextView
        android:id="@+id/tvItemFruitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewItemFruitStyle"/>

    <TextView
        android:id="@+id/tvItemFruitColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewItemFruitStyle"/>

    <TextView
        android:id="@+id/tvItemFruitWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewItemFruitStyle"/>

    <TextView
        android:id="@+id/tvItemFruitDelicious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewItemFruitStyle"/>

    <TextView
        android:id="@+id/tvItemFruitCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewItemFruitStyle"/>

    <TextView
        android:id="@+id/tvItemFruitUpdatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewItemFruitStyle"/>
</LinearLayout>